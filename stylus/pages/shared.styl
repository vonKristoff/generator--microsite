.img-showcase
  position relative

.loading
  position absolute
  width 100%
  top calc(50% - 1rem)
  text-align center
  font-size 2rem
  display none
  &.is-project-page
    top calc(40% - 1rem)
  &.is-active
    display block


#player
  wh(100%, 100%)
  transition opacity _speed--slow
  opacity 1
  visibility visible
  &.is-disabled
    opacity 0
    visibility hidden  

/** 
 * All Works button
 */
.projects-link
  display flex
  align-items center
  &.is-centred
    justify-content center
  .link-item
    display flex
    align-items center
    font-size _fs--xsmall
    .fa
      padding-right 1em
  &.has-block
    margin-bottom _pad2
    .link-item
      flex .35      
      .is-link
        +mq(1180px)
          margin-left _pad
        +mobile()
          display none
    .container-main
      flex 1
      h4.centre 
        margin-bottom 0
    .container-column
      flex .35
 
 /**
  * strike through title
  */
.strike
  width 100%
  position relative
  +before()
    height 1px 
    background $ghostlight
    top 50%
    z-index -1
    +mobile()
      background transparent
  h4    
    text-align center
    span
      padding 0 _pad
      background white
      +mobile()
        padding 0     

/**
 * Filter Tags on Projects / Works page
 */
.tags
  display flex
  align-items flex-start
  justify-content center
  flex-wrap wrap
  width 100%
  padding 1em 0
  font-size _fs--xsmall
  position fixed
  left 0
  transform translate3d(0, 0, 0)
  &.is-standard    
    bottom -4.5em//100%
    &.sticky
      transition all _speed
      background $white
      z-index 10
      bottom 0
    +mobile()      
      visibility hidden
      &.sticky
        top 0
        width 100px
        flex-direction column 
        background-color transparent
  &.is-footer
    padding 1em 0
    position relative
    top _gap
    visibility visible
    &.hide
      visibility hidden
  &.is-hero    
    padding 0
    width calc(100vw - 11em)
    position absolute
    justify-content flex-end    
    +mobile()
      width calc(100vw - 5em)
    .tag      
      badge(false)
      font-size _fs--xsmall
      margin-top 0
      display inherit
      padding 0  
      &.mod--outline
        background-color rgba(0,0,0,0)        
        border-color rgba(255,255,255,.7)        
        a
          transition background _speed
          padding .75em 2em
          color white !important
          &:hover
            background rgba(255,255,255,.5)
          &:after            
            background-color transparent       
  &.is-inline
    opacity 0
    position absolute
    bottom 0
    left 100%
    padding 1em
    justify-content flex-end
    transition .4s ease-out, opacity .4s ease-in    
    .tag
      badge()
      border 1px solid transparent
      font-size _fs--xsmall
      padding 0
      display inherit
      &.mod--outline
        background-color rgba(0,0,0,.9)
        color rgba(255,255,255,.75)
        span
          transition background _speed
          border-radius 5px
          padding .75em 2em
          &:hover
            background rgba(255,255,255,.5)
          &:after
            background-color transparent            

.tag  
  position relative
  margin .25em 0
  transition margin _speed
  cursor pointer
  padding .75em _pad
  color $font
  +mobile()
    badge()
  &:first-letter
    text-transform capitalize
  span, a
    position relative
    +after()
      transition width _speed
      width 0%
      height 1px
      left 0
      top 1.25em
      background-color $font
      color $font
  +onAfter()
    span, a
      width 100%
  &.active, &:hover
    span:after, a:after
      width 100%

.pre-footer
  position relative  

/**
 * Selected projects
 * on Home page
 */
.selected-projects
  li
    margin-bottom _pad2
    color $white
    width 100%
    height _img-height
    responsive()
    bg(cover)
    +mobile()
      margin-bottom _pad
  .selected-img
    display flex
    align-items center
    justify-content center
    wh(100%, 100%)      
    .label
      position relative
      +after()
        transition width _speed
        background-color $white
        height _border--link
        width 0%
        left 0
      .visible
        margin 0
        left 0
        position absolute
        transition all _speed
        font-family _fontfamily--head
        textshadow()
        font-size _h1
        opacity 0
        transform translateY(1.5em)
        bottom auto
        margin-top .5em
      .hidden
        visibility hidden
        font-family _fontfamily--head
        font-size _h1
      .client
        font-size .5em
        white-space nowrap
    &:hover, &.touchover
      color white
      &:after
        width 0
      .label
        &:after
          width 100%
        .visible
          transform translateY(0)
          opacity 1

/**
 * quotes
 */
ul.quotes
  li
    font-size 1em
    margin _pad 0
    padding 0 _pad2
    +tablet()
      padding 0
      font-size 1rem
      p.by
        font-size 1rem
    &:last-child
      p.by
        border-bottom none
  p
    margin 0
    &.quote
      font-family _fontfamily--head
      color $link
    &.by
      margin-top .5em
      font-size .75em
      border-bottom 1px solid $ghostlight
      padding-bottom 3em

/**
 * team
 */

.two-columns
  font-size _fs--small
  display flex
  align-items flex-start
  justify-content center
  +tablet()
    flex-direction column    
  .team-column
    display flex
    align-items center
    justify-content center
    flex-direction column
    +mobile()
      align-items flex-start
    li
      padding _pad _pad2
      +tablet()
        padding 0
      flex 1 0 1
      .title
        display flex
        align-items flex-start
        flex-direction column
        justify-content space-between
        height _pad
        margin-bottom 1em
        .badge
          color $grey--mid
          vertical-align middle
          font-size _fs--xsmall
          border-radius 5px
          padding .5em 0
      .name, .badge
        font-family _fontfamily--head
      &.mobile
        display none
      +tablet()
        &.mobile
          display block
        &.desktop
          display none
      &:last-child
        padding-bottom 0
        +tablet()
          padding-bottom _pad
        .about
          margin-bottom 0
    &.left li
      padding-left 0
    &.right li
      padding-right 0